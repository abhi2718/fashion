<%- include('partials/header') -%>
<style>
  /* Make the image fully responsive */
  .carousel-inner img {
    width: 100%;
    height: 100%;
  }
	.product_img
	{
		width:100%;
		height:100%;
		box-shadow:5px 5px 3px rgba(0,0,0,0.6);
		
	}
	.product_img img
	{
		width:100%;
		height:200px;
	}
	#product_section
	{
		position:absolute;
		top:315px;
		 left:8%;
	}
	.offer
	{
		 position: relative;
		  
	}
	.offer_link
	{
		position:absolute;
		bottom:0px;
		background:linear-gradient(45deg,blueviolet,deeppink);
		width:100%;
		height:40px;
		opacity:0.9;
	}
	.offer a
	{
		color:#fff;
		background:linear-gradient(45deg,blueviolet,deeppink);
		box-shadow:5px 5px 3px rgba(0,0,0,0.6);
		line-height:40px;
		height:40px;
		padding-left:8px;
		
	}
	.offer a:nth-child(2)
	{
		float:right;
		padding-right:8px;
		box-shadow:5px 5px 3px rgba(0,0,0,0.6);
	}
	.offer a:hover
	{
		color:white;
		text-decoration:none;
	}
	#offer_section_sm .offer a:nth-child(2)
	{
		float:right;
		padding-right:8px;
		box-shadow:5px 5px 3px rgba(0,0,0,0.6);
	}
	#offer_section_sm .offer a
	{
		box-shadow:5px 5px 3px rgba(0,0,0,0.6);
	}
	#demo
	{
		margin-top:60px;
	}
	
	#product img
	{
		box-shadow:5px 5px 3px rgba(0,0,0,0.6);
	}
  </style>

<div id="demo" class="carousel slide  " data-ride="carousel">

  <!-- Indicators -->
  <ul class="carousel-indicators d-none">
    <li data-target="#demo" data-slide-to="0" class="active"></li>
    <li data-target="#demo" data-slide-to="1"></li>
    <li data-target="#demo" data-slide-to="2"></li>
  </ul>
  
  <!-- The slideshow -->
  <div class="carousel-inner ">
    <div class="carousel-item active">
      <img src="https://images-eu.ssl-images-amazon.com/images/G/31/cross-site/3738-v2-ENG-Hero-SBD-1x._CB428085947_.jpg" alt="Los Angeles" width="1100" height="500">
    </div>
    <div class="carousel-item">
      <img src="https://images-eu.ssl-images-amazon.com/images/G/31/img20/AmazonLaunchpad/Events/MSME/Eng_PC_1500x600._CB428112640_.jpg" alt="Chicago" width="1100" height="500">
    </div>
    <div class="carousel-item">
      <img src="https://images-eu.ssl-images-amazon.com/images/G/31/cross-site/1232-Revised-v4-ds-ENG-Hero-best-sellers-1x._CB428094930_.jpg" alt="New York" width="1100" height="500">
    </div>
  </div>
  
  <!-- Left and right controls -->
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
</div>

<!--  ======================================  offer section ========================== -->

  <div class="container d-none d-sm-none d-md-none d-lg-none d-xl-block  " id="product_section">
	  <div class="row " id="product_section_row">
				  
			  <% products.forEach(function(product){%>	
				  
			  <div class="col-12 col-sm-6 col-md-3  mt-5 px-3" >
				  <div class="product_img bg-light" >
				<a href="<%= product.link %>">  
				  <img src="<%= product.img %>" class="img-thubnail" >
			   </a>	
				    <div class="offer">
						<div class="offer_link">
						<a href="<%= product.link %>" ><%= product.name %></a>
						<a href="<%= product.link %>" > <%= product.off %>%Off</a>
						</div>	
					</div>
				  
				  </div>
			  </div>
				  
			  <%});%>
			  </div>

  </div>


<!--  ======================================  offer section end here ========================== -->

